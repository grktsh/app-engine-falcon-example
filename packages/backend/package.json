{
  "scripts": {
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "linters": {
      "*.py": [
        "pipenv run isort --atomic",
        "pipenv run yapf --in-place",
        "pipenv run flake8",
        "mypy",
        "git add"
      ]
    },
    "ignore": [
      "**/tests/appengine.py"
    ]
  },
  "devDependencies": {
    "lint-staged": "^7.2.0"
  }
}
